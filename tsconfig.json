{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
            "components/*": [
                "./resources/js/components/*"
            ],
            "layouts": [
                "./resources/js/layouts/index.ts"
            ],
            "ziggy-js": [
                "./vendor/tightenco/ziggy"
            ],
            "ui": [
                "./resources/js/components/ui/index.ts"
            ],
            "utils": [
                "./resources/js/lib/utils.ts"
            ],
            "permission": [
                "./resources/js/lib/permission.ts"
            ]
        },
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.d.ts"
    ]
}
